<!DOCTYPE html>
<html>
<head>
  <title>Car Parts Inventory</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1 class="mb-4">Car Parts Inventory</h1>

  <form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
      <select name="make" class="form-select">
        <option value="">All Makes</option>
        <% makes.forEach(m => { %>
          <option value="<%= m.car_make %>" <%= selected.make === m.car_make ? 'selected' : '' %>><%= m.car_make %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-3">
      <select name="model" class="form-select">
        <option value="">All Models</option>
        <% models.forEach(m => { %>
          <option value="<%= m.car_model %>" <%= selected.model === m.car_model ? 'selected' : '' %>><%= m.car_model %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-2">
      <select name="year" class="form-select">
        <option value="">All Years</option>
        <% years.forEach(y => { %>
          <option value="<%= y.make_year %>" <%= selected.year == y.make_year ? 'selected' : '' %>><%= y.make_year %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Filter</button>
    </div>
  </form>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Make</th><th>Model</th><th>Year</th><th>Part</th><th>Qty</th><th>Price (CAD)</th>
      </tr>
    </thead>
    <tbody>
      <% parts.forEach(p => { %>
        <tr>
          <td><%= p.car_make %></td>
          <td><%= p.car_model %></td>
          <td><%= p.make_year %></td>
          <td><%= p.part_name %></td>
          <td><%= p.quantity %></td>
          <td><%= p.price_cad %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <nav>
    <ul class="pagination">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === page ? 'active' : '' %>">
          <a class="page-link" href="?make=<%= selected.make || '' %>&model=<%= selected.model || '' %>&year=<%= selected.year || '' %>&page=<%= i %>"><%= i %></a>
        </li>
      <% } %>
    </ul>
  </nav>
</body>
</html>
